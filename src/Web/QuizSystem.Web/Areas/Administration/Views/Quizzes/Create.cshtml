@model CreateQuizInputModel
@{
    this.ViewData["Title"] = "Create Question";
}
<div class="col-12 offset-md-2 col-md-8 row mt-4">
    <form asp-controller="Quizzes" asp-action="Create" method="post">
        <div class="component">
            <div class="card mb-3">
                <div class="card-body">
                    <h4 class="card-title">Add New Quiz</h4>
                    <p class="card-text" style="display: block;">
                        <span class="text-primary mr-1">∗</span>
                        You can always edit it later.
                    </p>
                </div>
                <div class="card-footer pb-5">
                    <div class="form-group">
                        <label asp-for="@Model.Name">Name</label>
                        <input asp-for="@Model.Name" class="form-control" rows="15" />
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                    <div class="row mx-1 text-white">
                        <button type="submit" class="btn btn-primary btn-block col-md-5 mt-5">Create</button>
                        <div class="col-1 mr-4"></div>
                        <a class="btn btn-primary btn-block col-md-5 mt-5" asp-area="Administration" asp-controller="Dashboard" asp-action="Index">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>