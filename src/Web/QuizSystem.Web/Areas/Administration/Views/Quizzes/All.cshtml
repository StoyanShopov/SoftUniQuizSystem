@model IEnumerable<AllQuizViewModel>
@{
    this.ViewData["Title"] = "All Quizzes";
}

<table class="table table-striped table-bordered mt-3">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Details</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in this.Model)
        {
        <tr>
            <th scope="row">@item.Name</th>
            <td>
                <a asp-area="Administration" asp-controller="Quizzes" asp-action="Details" asp-route-quizId="@item.Id">Details</a>
            </td>
            <td>
                <a asp-area="Administration" asp-controller="Quizzes" asp-action="Edit" asp-route-quizId="@item.Id">Edit</a>
            </td>
            <td>
                <a asp-area="Administration" asp-controller="Quizzes" asp-action="Delete" asp-route-quizId="@item.Id" onclick="return confirm('Are you sure you want to delete it?');">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
