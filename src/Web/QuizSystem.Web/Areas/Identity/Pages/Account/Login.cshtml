@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-md-4 offset-md-1">
            <div class="mt-5">
                <div class="mb-4">
                    <h1>Log in</h1>
                    <p class="lead">Enter your account.</p>
                </div>
                <form id="account" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input id="timezone" type="hidden" asp-for="Input.TimeZoneIana" value="" />
                    <div class="form-group">
                        <label asp-for="Input.Username"></label>
                        <input class="form-control" aria-describedby="usernameHelper" asp-for="Input.Username" placeholder="Enter username">
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input type="password" class="form-control" id="exampleInputPassword1" asp-for="Input.Password" placeholder="Password">
                        <span class="text-danger" asp-validation-for="Input.Password"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-block btn-primary">Log in</button>
                </form>
            </div>
        </div>  
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/timezone.js" asp-append-version="true"></script>
}
