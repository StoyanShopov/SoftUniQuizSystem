@model GroupWithEventsViewModel
@{
    ViewData["Title"] = "Add New Event";

}
@if (Model.Error)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
        <i class="fa fa-exclamation-circle"></i>
        <strong>On no!</strong> If you want to assign events to this group, you should choose some!
    </div>
}
<div class="col-12 offset-md-1 col-md-8 row">
    <form method="post" class="col-11 ml-4" asp-action="AddNewEvent" asp-controller="Groups">

        <div class="card mb-3 mt-3">
            <div class="card-header text-warning" style="font-size: xx-large">
                <i class="fas fa-folder-plus"></i>
            </div>
            <div class="card-body">
                <h4 class="card-title">Assign Events to @Model.Name</h4>
                <input type="hidden" asp-for="@Model.Id" value="@Model.Id" />

                <p class="card-text" style="display: block;">
                    <span class="text-primary mr-1">∗</span>
                    You can always edit it later.
                </p>
            </div>
            <div class="card-footer">
                <div class="component">
                    @if (Model.Events.Count() > 0)
                    {
                        @for (int i = 0; i < Model.Events.Count(); i++)
                        {
                            var quiz = Model.Events[i];
                            <div class="form-group mb-0">
                                <div class="mt-2">
                                    @Html.EditorFor(x => x.Events[i].IsAssigned)
                                    <h6 class="d-inline-block mt-0 ml-1">@quiz.Name</h6>
                                    @Html.HiddenFor(model => model.Events[i].Id)
                                    @Html.HiddenFor(model => model.Events[i].Name)
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p>There are currently no unassigned events.</p>
                        <a asp-area="Administration" asp-action="EventInput" asp-controller="Events">Create new.</a>
                    }
                </div>
            </div>
            <div class="row mx-4 mb-4 text-white">
                @if (Model.Events.Count() > 0)
                {
                    <button type="submit" class="btn btn-primary col-md-5 mt-5">Add Events</button>
                    <div class="col-1 mr-4"></div>

                }
                <a asp-area="Administration" asp-action="GroupDetails" asp-controller="Groups" asp-route-id="@Model.Id" class="btn btn-primary col-md-5 mt-5">Cancel</a>
            </div>
        </div>
    </form>
</div>
@if (this.User.IsInRole(GlobalConstants.AdministratorRoleName) && this.ViewData[GlobalConstants.DashboardRequest] != null)
{
    @section InnerNav
    {
        <partial name="_DashboardNavBarPartial" />
    }
}
@section Scripts
{
    <script src="~/js/navigation.js" asp-append-version="true"></script>
}
