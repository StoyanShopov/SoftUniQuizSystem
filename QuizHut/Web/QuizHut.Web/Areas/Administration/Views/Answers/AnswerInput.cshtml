@model AnswerViewModel
@{
    ViewData["Title"] = "Answer Input";
}

<div class="container-fluid">
    <div class="flex-grow-1">
        <partial name="_BublesAndCirclesPrtial" />
    </div>
    <div class="col-12 offset-md-2 col-md-8 row">
        <form method="post" class="col-11 ml-4" asp-area="Administration" asp-action="AddNewAnswer" asp-controller="Answers">
            <div class="component">
                <div class="card mb-3">
                    <div class="card-header text-warning" style="font-size: xx-large">
                        <i class="fas fa-folder-plus"></i>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">Add New Answer</h4>
                        <p class="card-text" style="display: block;">
                            <span class="text-primary mr-1">∗</span>
                            You can always edit it later.
                        </p>
                        <p class="card-text" style="display: block;">
                            <span class="text-primary mr-1">
                                <input type="checkbox" value="true" asp-for="IsRightAnswer">
                            </span>
                            Check the box if the answer is right.
                        </p>
                    </div>
                    <div class="card-footer pb-5">
                        <div class="input-group">
                            <input type="text" class="form-control" asp-for="Text" placeholder="...">
                        </div>
                        <span asp-validation-for="@Model.Text" class="text-danger"></span>
                        <div class="row mx-1 text-white">
                            <button type="submit" class="btn btn-primary col-md-5 mt-5">Add Answer</button>
                            <div class="col-1 mr-4"></div>
                            <a class="btn btn-primary col-md-5 mt-5" asp-area="Administration" asp-action="Display" asp-controller="Quizzes">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="text-center row">
    <a class="btn btn-primary col-md-4 mt-2 offset-2" asp-area="Administration" asp-action="QuestionInput" asp-controller="Questions">New Question</a>
    <a class="btn btn-primary col-md-4 mt-2 ml-3" asp-area="Administration" asp-action="Display" asp-controller="Quizzes">View Quiz</a>
</div>
@if (this.User.IsInRole(GlobalConstants.AdministratorRoleName) && this.ViewData[GlobalConstants.DashboardRequest] != null)
{
    @section InnerNav
    {
        <partial name="_DashboardNavBarPartial" />
    }
}
@section Scripts {
    <script src="~/js/navigation.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />
}



