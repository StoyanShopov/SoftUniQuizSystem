@model StudentEventsViewModel<StudentEndedEventViewModel>
@{
    ViewData["Title"] = "Student Ended Events All";
}

<div class="col-md-12 mb-4">
    <div class="card">
        <nav class="navbar navbar-expand-lg navbar-dark bg-danger p-2">
            <div class="container pl-0">
                <h5 class="mb-0 p-2 text-white">All Ended Events</h5>
            </div>
        </nav>
        <div class="card-body p-0">
            <table class="table table-hover col-12 mb-0">
                <thead>
                    <tr class="table-active bg-white">
                        <th scope="col">Event</th>
                        <th scope="col">Quiz</th>
                        <th scope="col">Date</th>
                        <th scope="col">Score</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (var _event in Model.Events)
                        {
                            <tr class="table-danger">
                                <th scope="row" class="pt-3">@_event.Name</th>
                                <th scope="row" class="pt-3">@_event.QuizName</th>
                                <th scope="row" class="pt-3">@_event.Date</th>
                                <th scope="row" class="pt-3">@(_event.Score != null ? _event.Score.Score : "")</th>

                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@if (Model.PagesCount > 1)
{
    var disabledLeftArrow = Model.CurrentPage == 1 ? "disabled" : string.Empty;
    var disabledRightArrow = Model.CurrentPage == Model.PagesCount ? "disabled" : string.Empty;
    <div class="text-center mt-4">
        <ul class="pagination justify-content-center">
            <li class="page-item @disabledLeftArrow">
                <a class="page-link" href="/Students/StudentEndedEventsAll?page=@Model.PreviousPage"><i class="fas fa-long-arrow-alt-left"></i></a>
            </li>
            @for (int i = 1; i <= Model.PagesCount; i++)
            {
                var active = i == Model.CurrentPage ? "active" : string.Empty;
                <li class="page-item @active">
                    <a class="page-link" href="/Students/StudentEndedEventsAll?page=@i">@i</a>
                </li>
            }
            <li class="page-item @disabledRightArrow">
                <a class="page-link" href="/Students/StudentEndedEventsAll?page=@Model.NextPage"><i class="fas fa-long-arrow-alt-right"></i></a>
            </li>
        </ul>
    </div>
}
@section Logout
{
    <li class="nav-item text-primary">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
              asp-route-returnUrl="@(this.Url.Action("Index", "Home", new { area = string.Empty } ))">
            <button type="submit" class="btn btn-outline-white ml-2">
                <i class="fas fa-sign-out-alt"></i> Logout
            </button>
        </form>
    </li>
}

