
@{
    ViewData["Title"] = "_FooterPartial";
    var area = this.User.IsInRole(GlobalConstants.AdministratorRoleName)
       || this.User.IsInRole(GlobalConstants.TeacherRoleName)
       ? "Administration"
       : "";
}

<footer class="footer-1 navbar-dark bg-primary pt-2 ">
    <div class="container">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-center">
            <div class="copyright text-center">
                <p class="small mb-0">© 2020, made with <span class="text-danger"><i class="fas fa-heart"></i></span> by MiraDask</p>
            </div>
            <div class="links">
                <ul class="footer-menu list-unstyled d-flex flex-row text-center text-md-left">
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (this.User.IsInRole(GlobalConstants.AdministratorRoleName)
                            || this.User.IsInRole(GlobalConstants.TeacherRoleName))
                        {
                            <li>
                                <a asp-area="Administration"
                                   asp-controller="Home"
                                   asp-action="Index">
                                    Home
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="btn-primary"><a asp-area="" asp-controller="Students" asp-action="Index">Home</a></li>
                        }
                    }
                    else
                    {
                        <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    }
                    <li><a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                </ul>
            </div>
        </div>
    </div>
</footer>

